<html>

<head>
    <meta charset="utf-8">
    <title>Course Creation Form</title>
    <link href="/stylesheets/style2.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <!-- Body of Form starts -->
    <div class="container">
        <h2 style="color:orange; text-align: center;">Course Details</h2>
        <form action="/course/create" method="post" autocomplete="on">
            <!--Course Title: -->
            <div class="box">
                <label for="title" class="fl fontLabel"> Title: </label>
                <div class="new iconBox">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </div>
                <div class="fr">
                    <input type="text" name="title" placeholder="Course Title" class="textBox" autofocus="on" required>
                </div>
                <div class="clr"></div>
            </div>
            <!--Course Title: -->


            <!--Course Description-->
            <div class="box">
                <label for="description" class="fl fontLabel"> Description: </label>
                <div class="fl iconBox"><i class="fa fa-envelope" aria-hidden="true"></i></div>
                <div class="fr">
                    <input type="text" required name="description" placeholder="Course Description" class="textBox">
                </div>
                <div class="clr"></div>
            </div>
            <!--Course Description-->

            <!--Course Image-->
            <div class="box">
                <label for="image" class="fl fontLabel"> Image Link: </label>
                <div class="fl iconBox"><i class="fa fa-envelope" aria-hidden="true"></i></div>
                <div class="fr">
                    <input type="text" required name="image" placeholder="Course Image Link" class="textBox">
                </div>
                <div class="clr"></div>
            </div>
            <!--Course Image-->


            <!---Course Price------>
            <div class="box">
                <label for="price" class="fl fontLabel">Price: </label>
                <div class="fl iconBox"><i class="fa fa-envelope" aria-hidden="true"></i></div>
                <div class="fr">
                    <input type="text" required name="price" maxlength="10" placeholder="Course Price" class="textBox">
                </div>
                <div class="clr"></div>
            </div>
            <!---Course Price---->




            <!---Submit Button------>
            <div class="box" style="background: #2d3e3f">
                <button style="background-color:#ff6600;height: 30px; float:right">Create New Course</button>
            </div>
            <!---Submit Button----->
        </form>
    </div>
    <!--Body of Form ends--->
</body>

</html>